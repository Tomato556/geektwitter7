<%= stylesheet_link_tag 'new', :media => "all" %>
<br><br><br><br><br><br><br>
<div class="post-container">
    <p class="title">息抜き投稿フォーム</p>
    <%= form_for(@relax, :url => { controller:'relaxes', action:'create'})do |f| %>
        <%= f.label :投稿内容 %>
        <br>
        <%= f.text_area :title, :size => "10×1" %>
        <br>
        <%= f.label :投稿詳細 %>
        <br>
        <%= f.text_area :body,size: "50×10" %>
        <br>
            <div class="field">
                <%= f.label :image %>
                <br>
                <%= f.file_field :image %>
            </div>
            <br><br>
        <div class="wrap">
            <button class="button">送信</button>
        </div>
    <br>
    <% end %>
</div>

    <%= link_to "一覧に戻る", relaxes_path %>